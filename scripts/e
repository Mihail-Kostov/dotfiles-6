#!/usr/bin/env bash
## 
function edit {
    #  edit()   -- EDITOR_ or EDITOR $@
    ${GUIVIMBIN} --servername ${VIRTUAL_ENV_NAME:-"/"} \
        --remote-tab-silent \
        ${@}
    return
}

function e {
    # e()       -- EDTIOR or EDITOR $@
    edit ${@}
    return
}

if [ -n "${BASH_SOURCE}" ] && [ "${BASH_SOURCE}" == "${0}" ]; then
    edit ${@}
    exit
fi
