# $mod is <Alt> (which includes <L-ALT> and <R-ALT>)
set $mod Mod1

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# Pango requires i3 version >= TODO
#font pango:Monaco 10

# Use Mouse+$mod to drag floating windows to their wanted position
#   <alt> <mouse>      -- drag floating window to position
floating_modifier $mod

# start dmenu (a program launcher)
#  <alt> x      -- Run dmenu program launcher
bindsym $mod+x exec dmenu_run


#
#  <alt>  Up        -- focus up
bindsym $mod+Up focus up
#  <alt>  Down      -- focus down
bindsym $mod+Down focus down
#  <alt>  Left      -- focus left
bindsym $mod+Left focus left
#  <alt>  Right     -- focus right
bindsym $mod+Right focus right


# alternatively, you can use the cursor keys:

#  <alt><shift> Up      -- move window up
bindsym $mod+Shift+Up move up
#  <alt><shift> Down    -- move window down
bindsym $mod+Shift+Down move down
#  <alt><shift> Left    -- move window left
bindsym $mod+Shift+Left move left
#  <alt><shift> Right   -- move window right
bindsym $mod+Shift+Right move right

## Vi-style window movement keybindings
# change focus
bindsym $mod+H focus left
bindsym $mod+J focus down
bindsym $mod+K focus up
bindsym $mod+L focus right
# move focused window
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right



# focus the parent container
#  <alt> A              -- focus parent window
bindsym $mod+a          focus parent

# focus the child container
#  <alt><shift> A       -- focus child window
bindsym $mod+Shift+a    focus child

## Window splits
#  <alt><shift> Y   -- split [next] window horizontally
bindsym $mod+Shift+y split h
#  <alt><shift> U   -- split [next] window vertically
bindsym $mod+Shift+u split v

#  <alt><shift> F   -- fullscreen
bindsym $mod+Shift+f fullscreen

#  <alt> W          -- Tabbed window layout
bindsym $mod+w layout tabbed
#  <alt> E          -- Default window layout
bindsym $mod+e layout default
#  <alt> S          -- Stacked window layout
bindsym $mod+s layout stacked

# toggle tiling / floating
#  <alt><shift> <space>     -- toggle floating mode for focused window
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
#  <alt> <space>            -- toggle focus mode: tiling / floating
bindsym $mod+space      focus mode_toggle


## switch to workspace
#  <alt> [ N: 1-9, 0 ]          -- switch to workspace [N]  (again to return)
workspace_auto_back_and_forth yes
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# Also <Alt>+<Fn> Keys
bindsym $mod+F1 workspace 1
bindsym $mod+F2 workspace 2
bindsym $mod+F3 workspace 3
bindsym $mod+F4 workspace 4
bindsym $mod+F5 workspace 5
bindsym $mod+F6 workspace 6
bindsym $mod+F7 workspace 7
bindsym $mod+F8 workspace 8
bindsym $mod+F9 workspace 9
bindsym $mod+F0 workspace 10




# move focused container to workspace
#  <alt><shift> [ N: 1-9, 0 ]   -- move to workspace [N]
bindsym $mod+Shift+exclam       move workspace 1
bindsym $mod+Shift+at           move workspace 2
bindsym $mod+Shift+numbersign   move workspace 3
bindsym $mod+Shift+dollar       move workspace 4
bindsym $mod+Shift+percent      move workspace 5
bindsym $mod+Shift+asciicircum  move workspace 6
bindsym $mod+Shift+ampersand    move workspace 7
bindsym $mod+Shift+asterisk     move workspace 8
bindsym $mod+Shift+parenleft    move workspace 9
bindsym $mod+Shift+parenright   move workspace 10

# reload the configuration file
#  <alt><shift> C   -- reload i3 configuration
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
#  <alt><shift> R   -- restart i3 (session preserving)
bindsym $mod+Shift+R restart

# XXX
# exit i3 (logs you out of your X session)
#  <alt><shift> E   -- exit i3
# bindsym $mod+Shift+E exit # TODO: confirm


#  <alt><shift>  R  -- enter resize mode
mode "resize" {

    # These bindings trigger as soon as you enter the resize mode

    # They resize the border in the direction you pressed, e.g.
    # when pressing left, the window is resized so that it has
    # more space on its left
    # same bindings, but for the arrow keys
    #  Left         -- grow left
    bindsym Left        resize grow     left 10 px or 10 ppt
    #  <Shift> Left -- shrink left
    bindsym Shift+Left  resize shrink   left 10 px or 10 ppt

    #  Down         -- grow down
    bindsym Down        resize grow     down 10 px or 10 ppt
    #  <Shift> Down -- shrink down
    bindsym Shift+Down  resize shrink   down 10 px or 10 ppt

    #  Up           -- grow up
    bindsym Up          resize grow     up 10 px or 10 ppt
    #  <Shift> Up   -- shrink up
    bindsym Shift+Up    resize shrink   up 10 px or 10 ppt

    #  Right        -- grow right
    bindsym Right       resize grow     right 10 px or 10 ppt
    #  <Shift> Rt   -- shrink right
    bindsym Shift+Right resize shrink   right 10 px or 10 ppt

    ## Vi-style resize keybindings
    #  [Shift] H / J / K  /L   -- [Shrink] Left / Down / Up / Right
    bindsym H       resize grow   left 10 px or 10 ppt
    bindsym Shift+H resize shrink left 10 px or 10 ppt
    bindsym J       resize grow   down 10 px or 10 ppt
    bindsym Shift+J resize shrink down 10 px or 10 ppt
    bindsym K       resize grow   up 10 px or 10 ppt
    bindsym Shift+K resize shrink up 10 px or 10 ppt
    bindsym L       resize grow   right 10 px or 10 ppt
    bindsym Shift+L resize shrink right 10 px or 10 ppt


    # back to normal: Enter or Escape
    #  <alt> return  -- exit resize mode
    bindsym Return      mode "default"
    #  <alt> escape  -- exit resize mode
    bindsym Escape      mode "default"

}
#  <alt>  R     -- enter resize mode
bindsym $mod+r  mode "resize"



#hide_edge_borders horizontal
#
#  <Volume Up>      -- PulseAudio Volume +10%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 -- +10%
#&& killall -SIGUSR1 i3status
#  <Volume Down>    -- PulseAudio Volume -10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -- -10%
#&& killall -SIGUSR1 i3status

## Shutdown and suspend
#  <XF86PowerOff>   -- exit
bindsym XF86PowerOff    exit
##  <XF86Sleep>      -- suspend
##bindsym XF86Sleep       exec suspend


## Application Shortcuts
#  <alt><shift> g   -- launch gvim
bindsym $mod+Shift+g    exec gvim
#  <alt><shift> b   -- launch browser
bindsym $mod+Shift+b    exec chromium-browser
#  <alt><shift> t   -- launch terminal
bindsym $mod+Shift+t    exec i3-sensible-terminal
#  <alt>Return      -- launch terminal
bindsym $mod+Return     exec i3-sensible-terminal

# NetworkManager for wireless and wired networking configuration
#  <alt> W      -- run NetworkManager applet (see also: $(nmcli))
bindsym $mod+Shift+W    exec --no-startup-id nm-applet

#  <alt><shift> Q   -- close focused window
bindsym $mod+Shift+Q kill

bindsym Print exec xfce4-screenshooter --fullscreen -s ~/pictures/screens
bindsym $mod+Print exec xfce4-screenshooter --window -s ~/pictures/screens

## focus to nearest
#  <alt> V      -- focus nearest: Gvim
bindsym $mod+v [class="Gvim"] focus
#  <alt> T      -- focus nearest: Terminal
bindsym $mod+t [class="Gnome-terminal"] focus
#  <alt> B      -- focus nearest: Browser
bindsym $mod+b [class="Chromium-browser"] focus

#  <alt>  [         -- start xflux
bindsym $mod+bracketleft    exec --no-startup-id "xflux -l 41.3 -g -95.9 -k 3401"
#  <alt>  ]         -- stop xflux
bindsym $mod+bracketright   exec --no-startup-id "pkill -9 -f xflux"
#  <alt><shift>  ]  -- reset gamma to 1.0
bindsym $mod+Shift+bracketright  exec --no-startup-id "xgamma -gamma 1.0"

## Autoruns
#  set x wallpaper to 0x000
exec --no-startup-id xsetroot -solid "#000000"

