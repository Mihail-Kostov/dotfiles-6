[schemes]
py = http://hg.python.org/
bb = https://bitbucket.org/
bb+ssh = ssh://hg@bitbucket.org/
gcode = https://{1}.googlecode.com/hg/
gcode+svn = https://{1}.googlecode.com/svn/trunk
kiln = https://{1}.kilnhg.com/Repo/
gh = git://github.com/
gh+ssh = git+ssh://git@github.com/

ocean = ssh://hg@hg.ocean/
moz = https://hg.mozilla.org/
code = ~/src/
#code+hg = ssh://hg@code/hg/
code+git = git+~/src/
#code+git = git+ssh://git@code/hg/


[reviewboard]
server = https://rev.ocean
#target_groups = self

[hostfingerprints]
#bitbucket.org = 81:2b:08:90:dc:d3:71:ee:e0:7c:b4:75:ce:9b:6c:48:94:56:a1:fe

[tortoisehg]
vdiff = gvimdiff
editor = gvim -p
forcerepotab = True
fullpath = True
shell = gnome-terminal -t %(reponame)s

[mq]
git = yes

[hgweb]
/ = ~/src/*
#/wrd = ~/src/wrd/*
/wrd = ~/workspace
/wrd/.ve = ~/workspace/.virtualenvs


[web]
style = gitweb
push_ssl = True
deny_push = *

[diff]
git = True


